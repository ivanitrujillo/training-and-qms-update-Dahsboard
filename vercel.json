{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_SITE_URL": "@next_public_site_url"
  },
  "build": {
    "env": {
      "DATABASE_URL": "@database_url",
      "RESEND_API_KEY": "@resend_api_key"
    }
  }
}
